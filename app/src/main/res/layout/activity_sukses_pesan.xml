<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpesan"
    android:orientation="vertical"
    tools:context=".PesanActivity">

    <TextView
        android:id="@+id/txtnama"
        android:layout_width="139dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:text="Pemesanan"
        android:textAlignment="center"
        android:textColor="#FFE500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPesanNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Nama"
        android:textAlignment="center"
        android:textColor="#FFE500"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtnama" />

    <TextView
        android:id="@+id/txtPesanHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="68dp"
        android:text="Harga"
        android:textAlignment="center"
        android:textColor="#FFE500"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPesanNama" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:text="X"
        android:textColor="#FFE500"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/txtquantity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/txtPesanHarga"
        app:layout_constraintTop_toBottomOf="@+id/txtPesanNama" />

    <TextView
        android:id="@+id/txtquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="148dp"
        android:text="quantity"
        android:textAlignment="center"
        android:textColor="#FFE500"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPesanNama" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Berhasil disimpan"
        android:textAlignment="center"
        android:textColor="#FFE500"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Total Bayar :"
        android:textAlignment="center"
        android:textColor="#FFE500"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTotalHarga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTotalHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Total Bayar"
        android:textAlignment="center"
        android:textColor="#FFE500"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnKembaliMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnKembaliMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali ke menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>